@model WebEvent.API.Model.DTO.UserDto;

@{
    Layout = "AuthorizeLayout";
}
@{
    ViewData["Title"] = "Index";
}

<h1>Personal info</h1>


<hr />
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">

                <div class="form-group">
                    <label asp-for="@Model.FirstName" class="control-label"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LastName" class="control-label"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                     <div class="form-group">
                        <label asp-for="@Model.Email" class="control-label"></label>
                        <input asp-for="@Model.Email" readonly = "readonly" class="form-control" />
                        @*<span asp-validation-for="@Model.Dto.Email" class="text-danger"></span>*@
            </div>


                
                    <div class="form-group">
                        <input type="submit" asp-area="" asp-controller="account" asp-action="update" value="Update" class="btn btn-primary" />
                    </div>

                    <div class="form-group" style="margin-top: 10px;">
                        <input type="submit" asp-area="" asp-controller="account" asp-action="change-password-view" value="Change password" class="btn btn-primary" />
                    </div>
            </form>
        </div>
    </div>
</form>
